<!-- Jumbotron -->
<div class="jumbotron">
  <h1 class="text-center">Sign-Up Today!</h1>
</div>

<div class="row">

  <!-- Sign-Up Panel-->
  <div class="col-lg-12">
    <div class="panel panel-default signUpBox">
      <div class="panel-heading">
        <h3 class="panel-title">New Member Sign-Up</h3>
      </div>
      <div class="panel-body">
        
        <!-- Sign-up Form (note the various input "types")-->
        <form role="form" class= "create-new-user" action="/user/create" method="POST">
          <div class="form-group">
            <label for="text">Name:</label>
            <input type="text" class="form-control" id="nameInput">
          </div>
          <div class="form-group">
            <label for="text">Email:</label>
            <input type="email" class="form-control" id="emailInput">
          </div>
          <div class="form-group">
            <label for="text">Password:</label>
            <input type="password" class="form-control" id="pwInput">
          </div>
          <div class="form-group">
            <label for="comment">How did you hear about us?</label>
            <textarea class="form-control" rows="5" id="commentInput"></textarea>
          </div>
          <button type="submit" class="btn btn-default" id="addUser">Submit</button>
        </form>

      </div>
    </div>
  </div>


  <script src="https://code.jquery.com/jquery.js"></script>

  <script>
    // Capture Button Click
    $("#addUser").on("click", function() {
    // Replaces the content in the "recentMember" div
    $("#recentMember").empty();
});
  </script>